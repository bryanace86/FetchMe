@model FetchMe.Models.PhotographModels.PhotographDto
@using FetchMe.Models.AzureConfigurationModels;
@inject Microsoft.Extensions.Options.IOptions<AzureStorageConfiguration> azureOptions
@{
    var baseURL300 = $"{azureOptions.Value.AzureStorageBaseURL}300";

}
@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="card text-light mt-3">
        <div class="card-header text-center">
            <div class="h1">Delete Image</div>
        </div>

        <div class="card-body">

            <div class="d-flex">

                <div class="flex-fill col text-center">
                    <h3 class="mb-3">Are you sure you want to delete this Image?</h3>
                    <img class="rounded box-shadow img-fluid" src="@baseURL300/@Model.ImageUrl" />
                </div>

            </div>

        </div>

        <div class="card-footer">

            <div class="d-flex">
                <form asp-action="Delete" class="w-100">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary" href="/Photographs?PhotographerSlug=@Model.Photographer.Slug">Back to Images!</a>
                        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                    </div>
                </form>

            </div>

        </div>

    </div>

</div>

