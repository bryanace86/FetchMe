@using FetchMe.Models.GalleryModels
@model IEnumerable<GalleryIndexItemVM>

@if (Model.Any())
{
    <div class="container py-3">
        <div class="row">

            @foreach (var gallery in Model)
            {
                if (!string.IsNullOrWhiteSpace(gallery.Thumbnail))
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="rounded box-shadow">
                            <a href="/photographs?GalleryId=@gallery.Id">
                                @if (!string.IsNullOrWhiteSpace(gallery.Thumbnail))
                                {
                                    <img class="rounded-top card-img-top" style="object-fit : cover;" height="200" src="@ViewData["baseURL300"]/@gallery.Thumbnail">
                                }
                                <div class="card-body">
                                    <h5 class="card-title text-truncate">@gallery.Title</h5>
                                </div>
                            </a>
                        </div>
                        
                    </div>

                }
            }
        </div>
    </div>
}
else
{
    <div class="container pt-3">
        <h1>There are no galleries to display.</h1>
    </div>
}