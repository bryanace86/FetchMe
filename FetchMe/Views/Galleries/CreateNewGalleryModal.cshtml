@if (User.Identity.IsAuthenticated)
{
    <div class="modal fade" id="create-new-gallery-modal" tabindex="-1" role="dialog" aria-labelledby="create-new-gallery-modalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="create-new-gallery-modalLabel">Create a Gallery</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="createImageGallerySpinner" class="d-flex justify-content-center">
                    <i class="fas fa-spinner fa-spin fa-5x p-3 d-none"></i>
                </div>
                <div id="createGalleryFormBody" class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="submit" form="createGalleryForm" class="btn btn-primary">
                        <span aria-hidden="true">Create</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}