@if (User.Identity.IsAuthenticated)
{
    <div class="modal fade" id="add-image-to-gallery" tabindex="-1" role="dialog" aria-labelledby="add-image-to-galleryLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="add-image-to-galleryLabel">Add to Gallery</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input id="addToGalleryImageId" hidden="hidden" />
                <div id="getImageGallerieSpinner" class="d-flex justify-content-center">
                    <i class="fas fa-spinner fa-spin fa-5x p-3 d-none"></i>
                </div>
                <div class="modal-body">
                    <div class="d-flex mb-3">
                        <button id="create-new-image-gallery-btn" class="btn btn-primary" data-toggle="modal" data-target="#create-new-gallery-modal" onclick="openCreateImageGallery(this)">
                            <i class="fas fa-plus"></i>
                            New Gallery
                        </button>
                    </div>
                    <div id="imageAvailableGalleries"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}
